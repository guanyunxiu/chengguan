<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             >
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/height_40"
                 android:background="@color/main_bg"
                 android:orientation="horizontal"
                 android:gravity="center_vertical"
                 android:paddingRight="@dimen/height_10"
                 android:paddingLeft="@dimen/height_10"
                 android:focusable="true"
                 android:focusableInTouchMode="true"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/main_blue"
                     android:text="@string/info_01"
                     android:drawableRight="@mipmap/icon_arr_right"
                     android:drawablePadding="@dimen/height_8"
                     android:textSize="@dimen/size_12"
                     android:layout_marginRight="@dimen/height_8"
                     />
                 <TextView
                     android:id="@+id/title01_tv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/main_blue"
                     android:text="公共设施"
                     android:drawableRight="@mipmap/icon_arr_right"
                     android:drawablePadding="@dimen/height_8"
                     android:textSize="@dimen/size_12"
                     android:layout_marginRight="@dimen/height_8"
                     />
                 <TextView
                     android:id="@+id/title02_tv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/main_blue"
                     android:textSize="@dimen/size_12"
                     android:text="上水井盖"
                     />
             </LinearLayout>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="@string/info_02"
                 android:drawableLeft="@mipmap/icon_info"
                 android:layout_marginLeft="@dimen/height_10"
                 android:layout_marginTop="@dimen/height_10"
                 android:textColor="@color/main_blue"
                 android:drawablePadding="@dimen/height_10"
                 />
             <android.support.v7.widget.RecyclerView
                 android:id="@+id/info_rlv"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
             </android.support.v7.widget.RecyclerView>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="@string/info_04"
                 android:drawableLeft="@mipmap/icon_details"
                 android:layout_marginLeft="@dimen/height_10"
                 android:layout_marginTop="@dimen/height_10"
                 android:textColor="@color/main_blue"
                 android:drawablePadding="@dimen/height_10"
                 />
             <View
                 android:layout_width="match_parent"
                 android:layout_height="0.5dp"
                 android:background="@color/line_color"
                 android:layout_marginTop="@dimen/height_10"
                 android:layout_marginLeft="@dimen/height_10"
                 android:layout_marginRight="@dimen/height_10"
                 />
             <RelativeLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/height_10"
                 android:layout_marginTop="@dimen/height_10"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/text_black"
                     android:text="@string/info_05"
                     />
                 <TextView
                     android:id="@+id/address_tv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="东经113°55′      西经113°55"
                     android:layout_marginLeft="@dimen/height_90"
                     android:textColor="@color/text_black"
                     />
             </RelativeLayout>
             <View
                 android:layout_width="match_parent"
                 android:layout_height="0.5dp"
                 android:background="@color/line_color"
                 android:layout_marginTop="@dimen/height_10"
                 android:layout_marginLeft="@dimen/height_10"
                 android:layout_marginRight="@dimen/height_10"
                 />
             <RelativeLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/height_10"
                 android:layout_marginTop="@dimen/height_10"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/text_black"
                     android:text="@string/info_06"
                     android:layout_centerVertical="true"
                     />
                 <ImageView
                     android:id="@+id/photo_img"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@mipmap/icon_camera"
                     android:layout_marginLeft="@dimen/height_90"
                     />
             </RelativeLayout>
             <View
                 android:layout_width="match_parent"
                 android:layout_height="0.5dp"
                 android:background="@color/line_color"
                 android:layout_marginTop="@dimen/height_10"
                 android:layout_marginLeft="@dimen/height_10"
                 android:layout_marginRight="@dimen/height_10"
                 />
             <android.support.v7.widget.RecyclerView
                 android:id="@+id/photo_rlv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/height_10"

                 >
             </android.support.v7.widget.RecyclerView>
             <RelativeLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/height_10"
                 android:layout_marginTop="@dimen/height_10"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/text_black"
                     android:text="@string/info_07"
                     android:layout_centerVertical="true"
                     />
                 <ImageView
                     android:id="@+id/video_img"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@mipmap/icon_video"
                     android:layout_marginLeft="@dimen/height_90"
                     />
             </RelativeLayout>
             <View
                 android:layout_width="match_parent"
                 android:layout_height="0.5dp"
                 android:background="@color/line_color"
                 android:layout_marginTop="@dimen/height_10"
                 android:layout_marginLeft="@dimen/height_10"
                 android:layout_marginRight="@dimen/height_10"
                 />
             <android.support.v7.widget.RecyclerView
                 android:id="@+id/video_rlv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/height_10"

                 >
             </android.support.v7.widget.RecyclerView>
             <Button
                 android:id="@+id/login_btn"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@drawable/bg_btn"
                 android:layout_marginLeft="@dimen/height_35"
                 android:layout_marginRight="@dimen/height_35"
                 android:layout_marginTop="@dimen/height_40"
                 android:layout_marginBottom="@dimen/height_20"
                 android:text="提交"
                 android:textColor="@color/white"
                 android:textSize="@dimen/size_18"
                 />
         </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>